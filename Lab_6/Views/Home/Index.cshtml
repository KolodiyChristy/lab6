@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <h3>Мешканці</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Прізвище</th>
                    <th scope="col">Ім'я</th>
                    <th scope="col">Номер квартири</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var p in ViewBag.People)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.firstName</td>
                        <td>@p.lastName</td>
                        <td>@p.flatId</td>
                        <td><a href="/Home/EditPeople/@p.Id/" role="button"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>

                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" href="/Home/AddPeople" role="button">Додати мешканця</a>
    </div>
    <div class="col-md-2">
    </div>
</div>